<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <title><%=  "Lakota Spirit"%></title>
	  <%= include_tiny_mce_if_needed %>

    <%= yield :head %>
  	<%= javascript_include_tag :defaults %>

	
		<%= stylesheet_link_tag 'lakotaspirit' %>
  </head>
  <body>
		<div id='header' class="threed">
				<h1><%= link_to "Lakota Spirit", root_path %></h1>	
				<h2>The place for authentic Native American Jewelry Art and Artifacts</h2>
		</div>
				
				<!--<img src="/images/lakotaspirit-banner.png" style="float:right; z-index:-1"/>-->
		<div id="navbar" style="margin: auto" >
					<ul >
						<% @tabs.each do |page| -%>
							<li><%= link_to page.title, view_page_path(page.name) %></li>
						<% end -%>
						<!--#creates admin/seller user link-->		
							<% if @current_user  %>
									<% if @current_user.user_level >= 4 %>								
										<li>
											<%= link_to "admin", admin_path %>
										</li>		
									<% elsif @current_user.user_level >= 3 %>
										<li>
											<%= link_to "seller", seller_path %>
										</li>
									<% end %>
							<% end %>
						
						<li>						
							<%if current_user %>
								<% link_to "Edit Profile", edit_user_path(:current) %>
								<%= link_to "Logout", logout_path %>				
							<%else%>
								<%= link_to "Login", login_path %>
							<% end %>
						</li>	
					</ul>		
		</div>
		</div>
		
		<br/>
		<!-- change this out for a new CSS ID -->
		<div id="shopping" class="threed">
			<ul>
				<% @shopping_navbar.each do |jewelry| -%>
					<li><%= link_to jewelry, category_path(jewelry) %></li>
				<% end %>
			</ul>		
		</div>
		<br/>
		<div id='content' class="threed">
			<h3 id="flash">
				<%= flash[:notice] %>
			</h3>
			
				<% if @cart.cart_items %>
				<div id="shopping_cart">
					<%= render :partial => "cart/cart" %>			
				</div>
				<%= drop_receiving_element("shoping_cart", :url => { :controller => "cart", :action => "add" }) %>
			<% end %>

			<%= yield %>
      	
      	<p style="clear:both"></p>
		</div>

		<div id='footer' class="threed">
		<p>website comming soon.  Design by: <a href="http://douglasheadley.com">VoodooLogic</a></p>
		</div>
		<%= debug params %> 
			<%= if @current_user then debug @current_user.username else "<code>no user logged in</code>" end%>
		<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-18105812-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
  </body>
</html>