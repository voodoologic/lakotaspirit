	<% content_for :head do %>
	<%= stylesheet_link_tag "admin" %> 
	<% end %> 
<h1>Listing items</h1>

<%= link_to 'Add new item', new_item_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
	 <th>Owner</th>
	 <th>Status</th>
    <th>Price</th>
    <th colspan="3"><center>Controls</center></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.title %></td>
    <td><%=h item.category %></td>
    <td><%=h item.user.full_name %></td>
    <td><%=h item_status(item.status) %></td>
    <td><%=h item.price %></td> 
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p>Or click any of the photos below</p>
	<% @items.each do |item| %>
		<%=content_tag :div, link_to( image_tag(item.photo.url(:thumb)),edit_item_path(item)), :class => "left", :style => "float: left" %>
	<% end %>
<br />
<p style="clear: left"></P>
<br/>
